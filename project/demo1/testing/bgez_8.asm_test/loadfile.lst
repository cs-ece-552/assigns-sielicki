          // BGEZ assembly test
          //
          // This is a test of the bgez instruction.  This test should verify that a BGEZ
          // works when there is an immediate instead of a label to branch to.
          
0000 c100 LBI	r1, 0				// loads all 0's into r1 to clear it
0002 492a ADDI	r1, r1, 10			// move a (base 16) into r1
0004 7906 BGEZ	r1, 6				// 10 >= 0, so should branch
          					// 0x4 + 2 + 6 = 0xC (where it should go to)
          					// none of these should execute
0006 c200 LBI	r2, 0
0008 4a41 ADDI	r2, r2, 1
000a 4a41 ADDI	r2, r2, 1
000c      .shouldGoHere:
000c 492a ADDI	r1, r1, 10			// branching with the immediate should execute this next
          					// (after the branch)
000e 0000 HALT					// end bgez_8.asm
          					// r1 = 20 (base 10) = 14 (base 16) now
          	
