          //test program to calculate sum of 1+2+...+9+10
          //The program loops around using beqz and j instructions and tests pipeline flush
          //Also ld instruction tests decode stage stall
0000 c00a lbi r0, 10 //loop counter
0002 c100 lbi r1, 0
0004 c301 lbi r3, 1
0006      .Check:
0006 6806 beqz r0, .Done 
0008 d904 add r1, r1, r0 //add the counter value to r1 recursively
000a db01 sub r0, r3, r0 //decrement counter
000c 27f8 j .Check 
000e      .Done:
000e c200 lbi r2, 0
0010 9a20 stu r1, r2, 0 //store the sum in 0th location of memory	
0012 8a40 ld r2, r2, 0 //load the sum to r2, r2 should be set to 0x37
0014 0000 halt
          
