          //Test branching, forward and backward
          //Make sure two consecutive branches work
          //Test all types of branches
          //
          
          //									pc in hex
0000      .start:
0000 c10a LBI	r1, 10		//						pc = 0
0002 c205 LBI	r2, 5		//if r2 ever gets 6, something went wrong	pc = 2
          
0004      .loop:			
          			//branch will take us back to here
0004 7128 BLTZ 	r1, .error	//this should never execute 			pc = 4
0006 493f ADDI	r1, r1, -1	//						pc = 6
0008 79fa BGEZ	r1, .loop	//						pc = 8
          
          //now r1 has -1
          
000a      .target1:
000a 7104 BLTZ	r1, .target2	//branch forward to a branch inst		pc = a
000c c206 LBI 	r2, 6		//this should never execute			pc = c
000e 0000 HALT			//this should never execute			pc = e
          
0010      .target2:
0010 610a BNEZ	r1, .target3	//branch forward to a branch inst		pc = 10
0012 c206 LBI 	r2, 6		//this should never execute			pc = 12
0014 0000 HALT			//this should never execute			pc = 14
          
0016      .target4:
0016 7108 BLTZ	r1, .target5	//branch forward				pc = 16
0018 c206 LBI 	r2, 6		//this should never execute			pc = 18
001a 0000 HALT			//this should never execute			pc = 1a
          
001c      .target3:
001c 61f8 BNEZ	r1, .target4	//branch backward to a branch inst		pc = 1c
001e 0000 HALT			//this should never execute			pc = 1e
          			//make sure that if pc is pointing to a halt nothing screwy happens
          
0020      .target5:
0020 c105 LBI	r1, 5		//						pc = 20
0022 d945 SUB	r1, r1, r2	//r2 still has 5 from beginning, so r1 = 0	pc = 22
0024 6904 BEQZ	r1, .target6	//branch to exit				pc = 24
0026 c206 LBI	r2, 6		//this should never execute			pc = 26
0028 0000 HALT			//this should never execute			pc = 28
          
002a      .target6:		
          			//exit
002a c101 LBI 	r1, 1		//						pc = 2a
002c 0000 HALT			//						pc = 2c
          
002e      .error:			
002e c206 LBI	r2, 6		//better not get here				pc = 2e
0030 0000 HALT			//						pc = 30
